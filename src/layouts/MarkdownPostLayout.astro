---
import SEO from '../components/SEO.astro'
const { frontmatter } = Astro.props;
---

<html>
  <head><title>{frontmatter.title}</title></head>
  <body>
    <div>
      <h1>{frontmatter.title}</h1>
      <p>{frontmatter.pubDate.slice(0, 10)}</p>
      <img src={frontmatter.image} alt={frontmatter.title} width="300" />
      <p>{frontmatter.description}</p>
      <slot />
    </div>
  </body>
</html>

<html lang="en">
<head>
    <SEO title={frontmatter.title} description={frontmatter.description} image={frontmatter.image}/>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="font-sans">
    <main class="max-w-screen-xl mx-auto p-4">
        <article>
            <div class="hero-image">
                <img class="w-full rounded-lg shadow" src={frontmatter.image} alt="" />
            </div>
            <div class="prose mx-auto p-4 max-w-3xl text-gray-dark">
                <div class="title mb-4 pb-4 text-center">
                    <div class="date mb-2 text-gray">
                        {frontmatter.pubDate} 
                    </div>
                    <h1 class="m-0 mb-0.5em">{frontmatter.title}</h1>
                    <hr />
                </div>
                <slot />
            </div>
        </article>
    </main>
</body>
</html>
